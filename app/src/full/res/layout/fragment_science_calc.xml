<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BE7024"
    android:columnCount="3"
    android:rowCount="4"
    tools:context=".ScienceCalcFragment">

    <Button
        android:id="@+id/op"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_rowWeight="@android:integer/config_mediumAnimTime"
        android:layout_columnWeight="@android:integer/config_mediumAnimTime"
        android:text="(" />

    <Button
        android:id="@+id/cb"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_rowWeight="@android:integer/config_mediumAnimTime"
        android:layout_columnWeight="@android:integer/config_mediumAnimTime"
        android:text=")" />

    <Button
        android:id="@+id/mod"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_rowWeight="@android:integer/config_mediumAnimTime"
        android:layout_columnWeight="@android:integer/config_mediumAnimTime"
        android:text="%" />

    <Button
        android:id="@+id/sin"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_rowWeight="@android:integer/config_mediumAnimTime"
        android:layout_columnWeight="@android:integer/config_mediumAnimTime"
        android:text="sin" />

    <Button
        android:id="@+id/cos"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_rowWeight="@android:integer/config_mediumAnimTime"
        android:layout_columnWeight="@android:integer/config_mediumAnimTime"
        android:text="cos" />

    <Button
        android:id="@+id/log"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_rowWeight="@android:integer/config_mediumAnimTime"
        android:layout_columnWeight="@android:integer/config_mediumAnimTime"
        android:text="ln" />

    <Button
        android:id="@+id/log10"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_rowWeight="@android:integer/config_mediumAnimTime"
        android:layout_columnWeight="@android:integer/config_mediumAnimTime"
        android:text="log10" />

    <Button
        android:id="@+id/fact"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_rowWeight="@android:integer/config_mediumAnimTime"
        android:layout_columnWeight="@android:integer/config_mediumAnimTime"
        android:text="FACT" />

    <Button
        android:id="@+id/pi"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_rowWeight="@android:integer/config_mediumAnimTime"
        android:layout_columnWeight="@android:integer/config_mediumAnimTime"
        android:text="pi" />

    <Button
        android:id="@+id/e"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_rowWeight="@android:integer/config_mediumAnimTime"
        android:layout_columnWeight="@android:integer/config_mediumAnimTime"
        android:text="e" />

    <Button
        android:id="@+id/pow"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_rowWeight="@android:integer/config_mediumAnimTime"
        android:layout_columnWeight="@android:integer/config_mediumAnimTime"
        android:text="^" />

    <Button
        android:id="@+id/sqrt"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_rowWeight="@android:integer/config_mediumAnimTime"
        android:layout_columnWeight="@android:integer/config_mediumAnimTime"
        android:text="sqrt" />


</GridLayout>